module Lib.Reflex.Click
  ( clickEvent
  )
where

import           Protolude
import qualified Reflex.Dom                    as RD

-- | Get the click event on an element
--
-- Use as:
--   clickEvent $ el' "a" ...
clickEvent
  :: (RD.DomBuilder t m, Rd. HasDomEvent t target 'ClickTag)
  => m target
  -> m (Event t ())
clickEvent = fmap (void . domEvent Click)
